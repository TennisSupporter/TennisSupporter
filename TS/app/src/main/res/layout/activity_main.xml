<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ts.team.tennissupporter.MainActivity"
    android:background="@drawable/rogerfederer"
    android:orientation="vertical">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="대회정보"
        android:id="@+id/button"
        android:onClick="informationButtonClicked"
        android:textSize="25dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="25dp"
        android:paddingBottom="25dp"
        android:background="#5a815b5b"
        android:layout_marginBottom="24dp"
        android:layout_above="@+id/button2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="게시판"
        android:id="@+id/button2"
        android:onClick="boardButtonClicked"
        android:padding="25dp"
        android:textSize="25dp"
        android:nestedScrollingEnabled="true"
        android:layout_marginBottom="41dp"
        android:background="#5a806262"
        android:layout_above="@+id/button3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="대진표"
        android:id="@+id/button3"
        android:padding="25dp"
        android:textSize="25dp"
        android:onClick="matchesButtonClicked"
        android:layout_marginBottom="71dp"
        android:background="#5a714d4b"
        android:layout_above="@+id/button4"
        android:layout_alignLeft="@+id/button2"
        android:layout_alignStart="@+id/button2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="관리자"
        android:id="@+id/button4"
        android:onClick="mangerButtonClicked"
        android:background="#5a714d4b"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:clickable="false"
        android:contextClickable="false" />

    <TextView android:text="hello" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/informationTextView"
        android:textAppearance="?android:attr/textAppearanceMedium" />


    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/registrationProgressBar" />
</RelativeLayout>
